<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.learning.multiple_screen_app.MainActivity">

    <TextView
        android:id="@+id/numbers"
        style="@style/categorias"
        android:text="Numbers"
        android:background="@color/blue1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/Colors"
        style="@style/categorias"
        android:text="Colors"
        android:background="@color/blue2"
        android:layout_below="@+id/numbers"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/family"
        style="@style/categorias"
        android:text="family"
        android:layout_below="@+id/Colors"
        android:background="@color/blue3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/Parents"
        style="@style/categorias"
        android:text="Phrases"
        android:background="@color/blue4"
        android:layout_below="@+id/family"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/Others"
        style="@style/categorias"
        android:text="Others"
        android:background="@color/blue5"
        android:layout_below="@+id/Parents"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
